<%= render "shared/nav_menu_header", title: 'Login', home: false, msg: 'Login'  %>
<div class="flex flex-col justify-center w-full max-w-3xl gap-6 mx-auto align-center">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class= 'flex flex-col justify-center w-full gap-6 px-4 py-2 mx-auto border-2 border-black max-w3xl align-center'>
      <h1 class="text-center">Log in</h1>
      <div class="m-auto field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
      </div>

      <div class="m-auto field">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="m-auto field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="self-start px-4 py-2 m-auto border-2 border-black actions">
        <%= f.submit "Log in" %>
      </div>
    </div>
  <% end %>
    <div class="flex justify-center gap-6">
        <%= render "devise/shared/links" %>
    </div>
</>
