<div class="w-full">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "shared/nav_menu_header", title: 'REGISTER', home: false, msg: 'Register', form: f  %>
    <div class= 'w-full max-w-lg mx-auto mt-6 mb-4'>
      <div class="w-full max-w-lg mx-auto">
        <%= f.text_field :name, autofocus: true, autocomplete: "text", placeholder: "Full name", class: "w-full" %>
      </div>
      <div class="w-full max-w-lg mx-auto">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "w-full" %>
      </div>
      <div class="w-full max-w-lg mx-auto">
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "w-full"  %>
      </div>

      <div class="w-full max-w-lg mx-auto">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm password", class: "w-full"  %>
      </div>

    </div>
  <% end %>

</div>

