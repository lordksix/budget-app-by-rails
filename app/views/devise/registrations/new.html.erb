<%= render "shared/nav_menu_header", title: 'Register', home: false, msg: '' %>
<div class="flex flex-col justify-items-center w-full max-w-3xl gap-6 mx-auto align-center">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class= 'flex flex-col w-full gap-6 px-4 py-2 mx-auto border-2 border-black max-w3xl justify-items-center align-center'>
      <h1 class="text-center">Sign up</h1>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="m-auto field">
        <%= f.text_field :name, autofocus: true, require:true, autocomplete: "text", placeholder: "Full name" %>
      </div>

      <div class="m-auto field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
      </div>

      <div class="m-auto field">
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password" %>
      </div>

      <div class="m-auto field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm password" %>
      </div>

      <div class="self-start px-4 py-2 m-auto border-2 border-black actions">
        <%= f.submit "Sign up" %>
      </div>
    </div>

  <% end %>

  <%= render "devise/shared/links" %>
</div>
