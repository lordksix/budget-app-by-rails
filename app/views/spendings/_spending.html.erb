<div id="<%= dom_id spending %>" class="w-[95%] shadow-sm shadow-project-text text-project-text sm:w-11/12 flex-col max-w-2xl gap-5 px-3 py-3 mx-auto bg-white hover:bg-gray-200">
  <div class="flex flex-col justify-between px-4 xs:flex-row xs:gap-6">
    <p>
      <strong>Name:</strong>
      <%= spending.name %>
    </p>

    <p>
      <strong>Amount:</strong>
      $<%= spending.amount %>

    </p>
  </div>
  <div class="flex flex-col px-4 text-xs xs:flex-row xs:gap-6">
    <p>
      <strong>Author:</strong>
      <%= spending.author.name %>
    </p>

    <p>
      <strong>Date:</strong>
      <%= spending.created_at %>
    </p>
  </div>
</div>

