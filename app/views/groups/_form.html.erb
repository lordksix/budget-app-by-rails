<%= form_with model: recipe, data: { controller: "nested-form", nested_form_wrapper_selector_value: '.nested-form-wrapper' }, class: 'flex flex-col w-full max-w-3xl mx-auto gap-6 justify-center items-center' do |form| %>
  <div class= 'w-full max-w-lg mx-auto mt-6 mb-4'>
    <div class="w-full max-w-lg mx-auto">
      <%= f.text_field :name, autofocus: true, autocomplete: "text", placeholder: "Full name", class: "w-full" %>
    </div>
    <div class="w-full max-w-lg mx-auto">
      <%= f.text_field :icon, autofocus: true, autocomplete: "email", placeholder: "Icon URL", class: "w-full" %>
    </div>
    <div class="flex flex-col">
      <template data-nested-form-target="template">
        <%= form.fields_for :spendings, Spending.new, child_index: 'NEW_RECORD' do |field| %>
          <%= render "shared/spending_form", form: field %>
        <% end %>
      </template>
      <%= form.fields_for :spendings do |field| %>
        <%= render "shared/recipe_food_form", form: field %>
      <% end %>
      <div data-nested-form-target="target"></div>
      <div class="flex items-center justify-start mb-6">
        <button type="button" data-action="nested-form#add" class="px-4 py-2 border-2 border-black cursor:pointer">Add Ingredients</button>
      </div>
    </div>
    <div class="justify-center w-full max-w-lg lex">
      <%= f.submit class: "text-project-text actions cursor-pointer" %>
    </div>
  </div>
<% end %>
